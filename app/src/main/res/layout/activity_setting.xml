<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guidiyam.sexrdv.ActivitySetting">



    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#15172C">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:id="@+id/menu"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"


                android:background="@drawable/arrow"
                android:clickable="false" />


        </LinearLayout>

        <TextView
            android:id="@+id/editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="normal"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/topbar"
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1B1F38"
        ></LinearLayout>

    <ScrollView
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:weightSum="11"

        android:background="#15172C"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="horizontal"


            >


            <RelativeLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:paddingLeft="-45dp"

                android:layout_height="match_parent">



<TextView

    android:id="@+id/txt1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="#FFFFFF"
    android:text="PIN protection"/>



                <TextView

                    android:layout_below="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#5D5F76"
                    android:text="Keep your data safe"/>




            </RelativeLayout>




            <RelativeLayout

                android:paddingTop="0dp"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_gravity="right"
                android:layout_height="match_parent">


                <Switch



                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:textColor="#FFF"
                    android:id="@+id/switch1"

                    android:thumb="@drawable/custom_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:theme="@style/BrandedSwitch.control"
                    android:checked="false"




                    />



                <TextView
                    android:id="@+id/change_pin"

                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#5758D6"
                    android:text="Change PIN code"/>

            </RelativeLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#1B1F38"
 ></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2"

            android:orientation="horizontal"


            >

            <RelativeLayout
                android:paddingLeft="10dp"
               android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="match_parent">


                <TextView




                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:text="Notifications"/>
                <TextView
                    android:layout_below="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#5D5F76"
                    android:text="Let us inform you upcoming events"
                    android:layout_height="wrap_content" />


                </RelativeLayout>


            <RelativeLayout
                android:paddingTop="0dp"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_gravity="right"
                android:layout_height="match_parent">

                <Switch
                  android:layout_marginRight="20dp"


                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:textColor="#FFF"
                    android:thumb="@drawable/custom_switch"

                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:theme="@style/BrandedSwitch.control"
                    android:checked="false"




                    />







            </RelativeLayout>

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1B1F38"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2"
            android:orientation="horizontal"


            >
            <RelativeLayout
                android:paddingLeft="30dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="match_parent">


                <TextView

                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:text="Calender synchronisation"/>
                <TextView
                    android:layout_below="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#5D5F76"
                    android:text="Add app events to your calender"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="0dp"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_gravity="right"

                android:layout_height="match_parent">

                <Switch


                     android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:textColor="#FFF"
                    android:thumb="@drawable/custom_switch"
                    android:id="@+id/switch3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:theme="@style/BrandedSwitch.control"
                    android:checked="false"




                    />







            </RelativeLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1B1F38"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
             android:layout_weight="6"
            android:orientation="horizontal"
            android:gravity="bottom"



            >
            <ImageView

                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:background="@drawable/banner_image"
                />
        </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
