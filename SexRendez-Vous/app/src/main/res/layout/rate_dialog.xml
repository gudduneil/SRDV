<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_drawable">

    <RelativeLayout
        android:layout_gravity="center"

        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="35dp"
            android:id="@+id/menu"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/coloringcross"
                android:clickable="false" />


        </LinearLayout>


        <TextView
            android:id="@+id/top_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Do you like this app?"
            android:textColor="#FFF"
            android:textSize="20sp"

            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pin_layout"
        android:gravity="center"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
        android:paddingTop="20dp"
          android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <ImageView
            android:id="@+id/s1"

            android:background="@drawable/s1"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <View
            android:id="@+id/v1"
            android:layout_toRightOf="@+id/s1"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <ImageView

            android:layout_toRightOf="@+id/v1"
            android:id="@+id/s2"
            android:background="@drawable/s2"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <View
            android:id="@+id/v2"
            android:layout_toRightOf="@+id/s2"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <ImageView

            android:layout_toRightOf="@+id/v2"
            android:id="@+id/s3"

            android:background="@drawable/s3"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <View
            android:id="@+id/v3"
            android:layout_toRightOf="@+id/s3"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <ImageView

            android:layout_toRightOf="@+id/v3"
            android:id="@+id/s4"
            android:background="@drawable/s4"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/v4"
            android:layout_toRightOf="@+id/s4"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <ImageView

            android:layout_toRightOf="@+id/v4"
            android:id="@+id/s5"
            android:background="@drawable/s5"
            android:layout_width="40dp"
            android:layout_height="40dp"  />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
