<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_app"
    tools:context="com.guidiyam.sexrdv.FunActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:paddingTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"


            >


            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/logo"
                android:background="@drawable/iconwithshadow"
                android:layout_width="170dp"
                android:layout_height="170dp" />

<TextView
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:textColor="#FFF"
    android:text="@string/perfect"
    android:textSize="40sp"
    android:id="@+id/p"
    android:layout_below="@+id/logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
            <TextView
                android:id="@+id/tx1"

                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:text="@string/succesfull_registration"
                android:textSize="14sp"
                android:layout_below="@+id/p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tx2"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="#FFF"
                android:text="@string/succesfull_msg"
                android:textSize="17sp"
                android:layout_below="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />



            <RelativeLayout
                android:id="@+id/rl_fun"
                android:paddingLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/tx2"
                android:layout_width="match_parent"
                android:background="@drawable/fun"
                android:layout_height="45dp"/>
            </RelativeLayout>

        </ScrollView>


</RelativeLayout>
